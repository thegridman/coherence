<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.oracle.coherence.ce.tests</groupId>
    <artifactId>coherence-functional-tests</artifactId>
    <version>${revision}</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>mp-health</artifactId>
  <name>Coherence MP Health Tests</name>

  <properties>
    <module.name>coherence.mp.health.testing</module.name>
    <testClassesDirectory>${project.build.outputDirectory}</testClassesDirectory>

    <failsafe.modules.argline>
      ${default.failsafe.modules.argline}
      --add-reads com.oracle.coherence.cdi=ALL-UNNAMED
      --add-reads com.oracle.coherence.cdi.server=ALL-UNNAMED
      --add-reads com.oracle.coherence.mp.health=ALL-UNNAMED
      --add-reads io.helidon.microprofile.server=ALL-UNNAMED
      --add-opens java.base/java.lang=weld.core.impl
      --add-opens java.base/java.lang=ALL-UNNAMED
      --add-opens io.helidon.microprofile.server/io.helidon.microprofile.server=weld.core.impl
      --add-opens io.helidon.microprofile.server/io.helidon.microprofile.server=io.helidon.microprofile.cdi
    </failsafe.modules.argline>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${coherence.group.id}</groupId>
      <artifactId>coherence-mp-health</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>${coherence.group.id}</groupId>
      <artifactId>coherence-cdi-server</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>org.eclipse.microprofile.health</groupId>
      <artifactId>microprofile-health-api</artifactId>
    </dependency>

    <dependency>
      <groupId>io.helidon.microprofile.bundles</groupId>
      <artifactId>helidon-microprofile-core</artifactId>
      <exclusions>
        <exclusion>
          <groupId>io.helidon.microprofile.weld</groupId>
          <artifactId>weld-se-core</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>io.helidon.microprofile.health</groupId>
      <artifactId>helidon-microprofile-health</artifactId>
    </dependency>

    <dependency>
      <groupId>org.jboss.weld</groupId>
      <artifactId>weld-junit5</artifactId>
    </dependency>

    <dependency>
      <groupId>jakarta.inject</groupId>
      <artifactId>jakarta.inject-api</artifactId>
    </dependency>

    <dependency>
      <groupId>${coherence.group.id}</groupId>
      <artifactId>coherence-testing-support</artifactId>
      <version>${project.version}</version>
      <exclusions>
        <exclusion>
          <groupId>org.junit</groupId>
          <artifactId>junit</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-params</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <id>default-jar</id>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <!--
              We exclude the beans.xml file from the final jar, otherwise
              Weld will find duplicate beans as it will scan both the jar
              and the classes directory, which failsafe puts on the test
              classpath or module path.
              -->
              <excludes>
                <exclude>**/beans.xml</exclude>
              </excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- run unit tests *Test.java -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <reuseForks>false</reuseForks>
          <!-- needed for tests -->
          <environmentVariables>
            <COHERENCE_ROLE>proxy</COHERENCE_ROLE>
            <COHERENCE_MEMBER>env01</COHERENCE_MEMBER>
          </environmentVariables>
        </configuration>
      </plugin>

      <!-- run integration tests *Tests.java and *IT.java -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <configuration>
          <reuseForks>false</reuseForks>
          <!-- needed for tests -->
          <environmentVariables>
            <COHERENCE_ROLE>proxy</COHERENCE_ROLE>
            <COHERENCE_MEMBER>env01</COHERENCE_MEMBER>
          </environmentVariables>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>stage10</id>
      <properties>
        <skipTests>false</skipTests>
      </properties>
    </profile>
  </profiles>
</project>
